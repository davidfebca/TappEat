<section class="devise-login">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="modal-admin">
          <div class="authform">
            <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
              <h1>Forgot your password?</h1>
              <p>We'll send password reset instructions.</p>
              <%= devise_error_messages! %>
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
              </div>
               <%= f.submit 'Reset Password', :class => 'btn btn-red pull-right' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
