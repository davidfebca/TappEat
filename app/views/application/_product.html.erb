<article class="col-md-6 col-lg-4 col-sm-6 animated zoomIn product-container">
  <div class="product">
    <%@image = asset_url('noPicture.png')%>
    <%@image = product.images.first.original  if product.images.count > 0%>
    <img width="358" height="230" class="header-bg img-responsive" src="<%= @image %>" alt="<%= product.title %>">
    <div class="avatar">
      <% @profile_image = asset_url('profile.png')%>
      <%  @profile_image = product.user.images.first.original  if product.user.images.count > 0%>
      <img width="100" height="100" src="<%=@profile_image%>" alt="user photo" />
    </div>
      <div class="content">
        <h3><%= product.title %></h3>
        <p><%= product.short_description%></p>
        <span class="price color-red"><%= product.price%> â‚¬ / <small>tappeat</small></span>
        <a href="<%= products_details_path :id => product.id%>" class="btn btn-buy btn-red"><%=t('details')%></a>
      </div>
  </div>
</article>
